{% if data|length > 0 %}
    WParameters.content = {
        {% if data.showCart is defined %}
            showCart: {{ data.showCart }},
        {% endif %}
        block: {
            {% if data.block.showBlocks is defined %}
                showBlocks: {{ data.block.showBlocks }},
            {% endif %}
            {% if data.block.containerId is defined %}
                container: { {% for key, value in data.block.containerId %}{{ key }}: '{{ value }}'{% if not loop.last %}, {% endif %}{% endfor %} },
            {% endif %}
            {% if data.block.count is defined %}
                count: {{ data.block.count }},
            {% endif %}
            {% if data.block.useCustomTmpl is defined and data.block.useCustomTmpl == 'true' %}
                tmpl: {
                path: '{{ data.block.pathTmpl }}',
                id: '{ {% for key, value in data.block.idTmpl %}{{ key }}: '{{ value }}'{% if not loop.last %},{% endif %}{% endfor %} }
                },
            {% else %}
                tmpl: {path: '{{protocol ~ '://' ~ url_tmpl_widgets}}/blockTmpl.html'},
            {% endif %}
            animate: function (){}
        },
        content:{
            {% if data.content.containerId is defined %}
                container: { widget: '{{ data.content.containerId }}' },
            {% endif %}
            {% if data.content.listPerPage is defined %}
                list: [{{ data.content.listPerPage }}],
            {% endif %}
            {% if data.content.listPerPage is defined %}
                defaultCount: {{ data.content.defaultPerPage }},
            {% endif %}
            {% if data.content.useCustomTmpl is defined  and data.content.useCustomTmpl == 'true' %}
                tmpl: {
                path: '{{ data.content.pathTmpl }}',
                id: { {% for key, value in data.content.idTmpl %}{{ key }}: '{{ value }}'{% if not loop.last %},{% endif %}{% endfor %} }
                },
            {% else %}
                tmpl: {path: '{{protocol ~ '://' ~ url_tmpl_widgets}}/contentTmpl.html'},
            {% endif %}
            animate: function (){}
        }
    }
{% endif %}