{% if data|length > 0 %}
    WParameters.search = {
        {% if data.containerId is defined %}
            container: { widget: '{{ data.containerId }}' },
        {% endif %}
        {% if data.showCatalog is defined %}
            showCatalog: {{ data.showCatalog }},
        {% endif %}
        {% if data.useCustomTmpl is defined %}
            tmpl: { path: '{{ data.pathTmpl }}', id: '{{ data.idTmpl }}'},
        {% else %}
            tmpl: {path: '{{protocol ~ '://' ~ url_tmpl_widgets}}/searchTmpl.html'},
        {% endif %}
        animate: function (){}
    }
{% endif %}