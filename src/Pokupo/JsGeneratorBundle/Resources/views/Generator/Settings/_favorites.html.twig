{% if data|length > 0 %}
    WParameters.favorites = {
        {% if data.containerId is defined %}
            container: { widget: '{{ data.containerId }}' },
        {% endif %}
        {% if data.show is defined %}
            show: [ {% for key, item in data.show %}'{{ key }}'{% if not loop.last %}, {% endif %}{% endfor %} ],
        {% endif %}
        {% if data.useCustomTmpl is defined %}
            tmpl: {
                path: '{{ data.pathTmpl }}',
                id: { {% for key, value in data.idTmpl %}{{ key }}: '{{ value }}'{% if not loop.last %},{% endif %}{% endfor %} }
            },
        {% else %}
            tmpl: {path: '{{protocol ~ '://' ~ url_tmpl_widgets}}/favoritesTmpl.html'},
        {% endif %}
        animate: function (){}
    }
{% endif %}
