{% if data|length > 0 %}
    WParameters.buttonPayment = {
        {% if data.containerId is defined %}
            container: { widget: '{{ data.containerId }}' },
        {% endif %}
        {% if data.button is defined %}
            title: '{{ data.button }}',
        {% endif %}
        {% if data.useCustomTmpl is defined %}
            tmpl: {
                path: '{{ data.pathTmpl }}',
                id: { {% for key, value in data.idTmpl %}{{ key }}: '{{ value }}'{% if not loop.last %},{% endif %}{% endfor %} }
            },
        {% else %}
            tmpl: {path: '{{protocol ~ '://' ~ url_tmpl_widgets}}/buttonPaymentTmpl.html'},
        {% endif %}
        animate: function (){}
    }
{% endif %}