{% extends 'PokupoLandingBundle:Templates:base.html.twig' %}

{% block javascripts %}
    {{parent()}}
    <script src='{{ 'https://' ~ url_widgets }}/js/widgets/JSCore-1.3.min.js' type="text/javascript"></script>
    <script type="text/javascript">
        var pkpWHostTmpl = '{{'https://' ~ url_tmpl_widgets}}';
        var WParameters = {
            core: {
                shopId: 1,
                imgLoader: '/images/loader_32px.gif',
                host: '{{host}}',
                pathToData: '{{pathToData}}',
                pathToPostData: '{{pathToPostData}}',
                hostApi: '{{hostApi}}'
            },
            registrationSeller: {
                tmpl: {path: pkpWHostTmpl + '/registrationSellerTmpl.html'}
            },
            modalMessage: {
                tmpl: {path: pkpWHostTmpl + '/modalMessageTmpl.html'}
            }
        }
        PokupoWidgets.Init(["registrationSeller"], WParameters)
    </script>

    <script src="{{ asset('scripts/main.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/pokupolanding/js/frontend.js') }}" type="text/javascript"></script>
{% endblock %}


{% block body %}
    <div class="container-fluid">
        <div class="row-fluid">
            <div id="defaultRegistrationSellerWidgetId" class="main error_page">
                <h1>Oops! An Error Occurred</h1>

                <h2>The server returned a "{{ status_code }} {{ status_text }}".</h2>
            </div>
            <div id="content"></div>
        </div>
    </div>
{% endblock %}

