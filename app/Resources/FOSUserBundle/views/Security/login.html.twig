{% extends "FOSUserBundle::login_layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    {% if error %}
         <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form class="form-horizontal" role="form" action="{{ path("fos_user_security_check") }}" method="post" >
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="form-group">
            <label for="username" class="col-sm-5 control-label">{{ 'security.login.username'|trans }}</label>
            <div class="col-sm-7">
                <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" />
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-sm-5 control-label">{{ 'security.login.password'|trans }}</label>
            <div class="col-sm-7">
                <input type="password" id="password" name="_password"  class="form-control" value="" required="required" />
            </div>
        </div>
        <div class="form-group">
        <div class="col-sm-offset-5 col-sm-7">
                <div class="checkbox">
                    <label class="checkbox-inline">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />{{ 'security.login.remember_me'|trans }}
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-5 col-sm-7">
                <input type="submit" class="symfony-button-grey" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}">
            </div>
        </div>    
    </form>
{% endblock fos_user_content %}